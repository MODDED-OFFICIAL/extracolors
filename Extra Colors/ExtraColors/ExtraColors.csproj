<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFramework>netstandard2.1</TargetFramework>
        <Version>1.2.0</Version>
        <Description>Adds alot more colors!</Description>
        <Authors>Boss_GamerYT</Authors>
    </PropertyGroup>

    <PropertyGroup>
        <GameVersion>2021.6.15s</GameVersion>
        <DefineConstants>$(DefineConstants);STEAM</DefineConstants>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    </PropertyGroup>

    <ItemGroup>
        <Reference Include="$(AmongUs)/BepInEx/core/*.dll"/>
        <Reference Include="$(AmongUs)/BepInEx/unhollowed/*.dll"/>
    </ItemGroup>

    <Target Name="CopyCustomContent" AfterTargets="AfterBuild">
        <Message Text="Second occurrence" />
        <Copy SourceFiles="$(ProjectDir)\bin\$(Configuration)\netstandard2.1\ExtraColors.dll" DestinationFolder="$(AmongUs)/BepInEx/plugins/" />
    </Target>
</Project>